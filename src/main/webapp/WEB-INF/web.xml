<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>LMS</display-name>

<!--  bank-->
  <servlet>
    <servlet-name>bank</servlet-name>
    <servlet-class>com.lms.resources.BankResource</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>bank</servlet-name>
    <url-pattern>/banks</url-pattern>
    <url-pattern>/banks/*</url-pattern>
  </servlet-mapping>
<!--  bank-->

<!--  emp-->
  <servlet>
    <servlet-name>employee</servlet-name>
    <servlet-class>com.lms.resources.EmployeeResources</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>employee</servlet-name>
    <url-pattern>/underwriters</url-pattern>
    <url-pattern>/underwriters/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>employee</servlet-name>
    <url-pattern>/managers</url-pattern>
    <url-pattern>/managers/*</url-pattern>
  </servlet-mapping>
<!--emp-->

<!--  user-->
  <servlet>
    <servlet-name>user</servlet-name>
    <servlet-class>com.lms.resources.UserResource</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>user</servlet-name>
    <url-pattern>/users</url-pattern>
    <url-pattern>/users/*</url-pattern>
  </servlet-mapping>
<!--  user-->

<!--  loan-->
  <servlet>
    <servlet-name>loan</servlet-name>
    <servlet-class>com.lms.resources.LoanResource</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>loan</servlet-name>
    <url-pattern>/loans</url-pattern>
    <url-pattern>/loans/*</url-pattern>
  </servlet-mapping>
<!--loan-->
</web-app>
